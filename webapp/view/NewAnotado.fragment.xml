<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core= "sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

        <Dialog >
		<f:SimpleForm id="objectForm"
            
			editable="true"
			layout="ResponsiveGridLayout"
			title="Anotar Estudiante"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
            
			
            
            <f:content >

                <Label text="CodMesa" design="Bold" />
				<Input value="{textModelStudent>/CodMesa}"  id="CodMesa"     enabled="false"/>

				<Label text="Fecha" design="Bold" />
				<Input  value="{textModelStudent>/Fecha}" id="Fecha"   enabled="false" />
                
				<Label text="{i18n>Dni}" design="Bold"/>
				<Input  id="DniEstudiante" type="Number"  valueLiveUpdate="true"   />

                <Label text="Tipo Estudiante" design="Bold" />
                <ComboBox    id="TipoEstudiante" selectedKey="" enabled="true" >
					<core:Item text="Regular"  key="1"/>
                    <core:Item text="Libre"  key="2"/>
				</ComboBox>

                <Label text="AÃ±o Curso" design="Bold" />
                <ComboBox    id="AnioCurso" selectedKey="" enabled="true">
					<core:Item text="Primero"  key="1"/>
                    <core:Item text="Segundo"  key="2"/>
                    <core:Item text="Tercero"  key="3"/>
                    <core:Item text="Cuarto"  key="4"/>

				</ComboBox>

				
                
                <Button type="Accept" text="ok" press="addAnotado"/>
                <Button type="Default" press="closeFragment" text="cancel"/>

            </f:content>
                
			
            
		</f:SimpleForm>
	</Dialog>



</core:FragmentDefinition>
